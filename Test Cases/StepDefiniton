package AutomationPratice;

import org.openqa.selenium.By;

public class StepDefinitions {
	
	@Given ("^User is on automationpratice login page$");
	
	public void User_is_on_automationpratice_login_page()
	{
		//code to be execute
		driver.get("http://automationpractice.com");
	}
	

	@When ("^User is clicking on login page$");
	public void User_is_clicking_on_login_page()
	{
  //code to be execute
		driver.findElement(By.xpath("//*[@id=\"header\"]/div[2]/div/div/nav/div[1]/a")).click();
	}
	
	@Then ("^User is puting valid email and password$");
	public void User_is_puting_valid_email_and_password()
	{
  //code to be execute
		driver.findElement(By.xpath("//*[@id=\"email\"]")).sendKeys("milevskinikola@gmail.com");
		driver.findElement(By.xpath("//*[@id=\"passwd\"]")).sendKeys("nikolabaska");
		driver.findElement(By.id("SubmitLogin")).click();
	}
	
	@And("^User should be loged in$");
	public void User_should_be_loged_in()

	{
		//code to be execute
	}
	
	
}
